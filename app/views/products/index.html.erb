<table class="productList">
	
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Quantity</th>
		<th></th>
	</tr>

	<% @items.each do |i| %>

		<tr>
			<td><%= link_to i.name, product_path(i) %></td>
			<td><%= i.price %></td>
			<td><%= i.count %></td>
			<td><%= link_to "Delete", product_path(i), method: :delete, data: { confirm: "Are you sure you want to delete this item?" } %></td>
		</tr>

	<% end %>
</table>