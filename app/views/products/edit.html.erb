<h2>Edit product</h2>

<%= form_for @item, :html => { :multipart => true } do |f| %>

  <p>Наименование:<br/><%= f.text_field :name %></p>
  <p>Цена:<br/><%= f.text_field :price %></p>
  <p>Количество:<br/><%= f.text_field :count %></p>
  <p>Категория:<br/><%= f.select(:category_id, @category_array) %></p>
  <p>Производитель:<br/><%= f.select(:producer_id, @producer_array) %></p>
  <p>Магазин:<br/><%= f.select(:retailer_id, @retailer_array) %></p>

  <p><%= f.file_field :image %></p>

	<p><%= f.submit "Сохранить изменения" %></p>

<% end %>