<h2><%= @item.name %></h2>

<%= image_tag(@item.image.exists?(:small) ? @item.image.url(:small) : 'Image_missing_small.jpg') %>

<table class="productList">
  
  <tr >
    <th>Цена</th>
    <th>Количество</th>
  </tr>
  <tr>
    <td><%= @item.price %></td>
    <td><%= @item.count %></td>
  </tr>
</table>

<div class='productEditDeleteLinks'>
<% if current_user && current_user.admin? %>
  <%= link_to "Редактировать", product_path(@item)+'/edit' %>
  <%= link_to "Удалить", product_path(@item), method: :delete, data: { confirm: "Вы уверены, что хотите удалить этот товар?" } %>
<!-- Are you sure you want to delete this item? -->
<% end %>
<% if current_user && current_user.user? %>
  <%= link_to 'Добавить в корзину', cart_path + '/' + @item.id.to_s%>  
<% end %>	
  
</div>